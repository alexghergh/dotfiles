_JOBS0=$'%{\e[38;2;243;66;9m%}'
_JOBS1=$'%{\e[38;2;104;84;200m%}'
_USRNM=$'%{\e[38;2;247;213;145m%}'
_HSTNM=$'%{\e[38;2;181;94;68m%}'
_PTH=$'%{\e[38;2;119;171;185m%}'
_GIT=$'%{\e[38;2;182;210;207m%}'
_PRMPT=$'%{\e[38;2;202;250;187m%}'

_FG=$'%{\e[48;2;91;91;91m%}'

_RESET=$'%{\e[0m%}'

##
## Left prompt
##
PS1=$'%(1j.$_JOBS0.$_JOBS1)(%j)$_RESET $_USRNM%n$_RESET@$_HSTNM%M$_RESET:$_PTH$(_custom_current_path)$_RESET $_GIT$(git_current_branch)$_RESET\n$_PRMPT\U279C %(!.#.$)$_RESET '

##
## Right prompt
##
RPS1=$'%(?.%F{green}\U2713%f.%F{red}$?%f)'
